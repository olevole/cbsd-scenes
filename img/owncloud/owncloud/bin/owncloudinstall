#!/bin/sh
#v10.0.2
globalconf="${workdir}/cbsd.conf";
MYARG=""
MYOPTARG="rootpw owncloudpw fqdn owncloudlang"
MYDESC="owncloud image helper"

[ -f ${globalconf} ] || err 1 "no such conf file";
. ${globalconf}
. ${subr}
. ${inventory}
. ${system}
. ${color}
init $*

BACKTITLE="--backtitle \Z1${0}\Zn --colors"
DIALOG=${DIALOG=/usr/bin/dialog}
SKELDIR="${jailsysdir}/${jname}/skel"

install_img()
{
    sed s:MY.HOSTNAME:${fqdn}:g ${SKELDIR}/etc/owncloud-httpd.conf > ${path}/usr/local/etc/apache24/Includes/owncloud.conf
    ${ECHO} "${MAGENTA}owncloud installed. After jail start, default installation${NORMAL}"
    ${ECHO} "${MAGENTA}will be available via: ${GREEN}http://${fqdn}/owncloud${NORMAL}"
    echo
    ${ECHO} "${MAGENTA}Default login: ${GREEN}admin${NORMAL}"
    ${ECHO} "${MAGENTA}Default pass: ${GREEN}admin${NORMAL}"
    echo
    exit 0
}


myconf()
{
    tempfile=`mktemp ${ftmpdir}/xconf.XXXX`
    trap "rm -f ${tempfile}" 0 1 2 3

    returncode=0
    while test $returncode != 1 && test $returncode != 250; do
	exec 3>&1
	value=`$DIALOG ${BACKTITLE} --ok-label "Install" --title "owncloud jail install" --form "owncloud configuration" \
0 0 1 \
        "Real fqdn (eg: owncloud.my.domain):"       1 1      ""  1  35 40 40 \
2>&1 1>&3`

	returncode=$?
	exec 3>&-

	case ${returncode} in
	    0)
		I=0
		for  a in ${value}; do
		    case $I in
			0)
			    fqdn="${a}"
			    ;;
		    esac
		    I=$(( I + 1 ))
		done

		if [ -z "${fqdn}" ]; then
		    echo "Please fill all inputs"
		    read p
		    returncode=5
		else
		    install_img
		fi
		;;
            *)
                cbsd jcleanup jname=${jname}
                exit
        esac

    done
}

### MAIN
. ${etcdir}/buildworld.conf
. ${workdir}/universe.subr

. ${jrcconf}
[ $? -eq 1 ] && err 1 "${MAGENTA}No such jail: ${GREEN}${jname}${NORMAL}"

init_target_arch
init_basedir

[ $baserw -eq 1 ] && path=$data
[ ! -d "${path}" ] && mkdir -p ${path}

amount=0

if  is_mounted "${path}"; then
    amount=1
fi

if [ $amount -eq 0 ]; then
    mountbase
    mountfstab
fi

# auto install by arg
[ -n "${fqdn}" ] && install_img
# wizard
myconf

cbsd jcleanup jname=${jname}
